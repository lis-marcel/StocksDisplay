<Window x:Class="StocksDisplay.View.DetailedCompanyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:StocksDisplay.View"
        mc:Ignorable="d"
        Title="DetailedCompanyView" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Name="CompanyName" FontSize="16" Margin="0,0,0,10"/>
            <ComboBox Name="ChartOptions" Width="200" Margin="0,0,0,10"></ComboBox>
            <Button Content="Show Chart" Width="100" Click="ShowChart_Click"/>

            <oxy:PlotView x:Name="CompanyDataChart" Height="300" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
