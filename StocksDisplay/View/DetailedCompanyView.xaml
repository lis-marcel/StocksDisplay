<Window x:Class="StocksDisplay.View.DetailedCompanyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:StocksDisplay.View"
        mc:Ignorable="d"
        Title="DetailedCompanyView"
        Height="450"
        Width="800"
        Style="{DynamicResource MainWindowStyle}">

    <Grid Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10,10,10,10">
            <Image x:Name="CompanyLogo" Width="50" Height="50" />
            <TextBlock x:Name="CompanyName" 
                FontWeight="Bold" 
                TextAlignment="Center" 
                TextWrapping="Wrap"
                Foreground="{DynamicResource WindowForegroundBrush}"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10,10,10,10">
            <ComboBox Name="ChartOptions" 
                     Width="200" 
                     Margin="0,0,0,10"/>
            <Button Content="Show Chart" 
                   Width="100" 
                   Click="ShowChart_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="2"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,42,0,0">
            <ToggleButton x:Name="ThemeToggle"
                        Width="58"
                        Height="30"
                        Checked="ThemeToggle_Checked"
                        Unchecked="ThemeToggle_Unchecked">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="SwitchBorder"
                                Width="58"
                                Height="30"
                                CornerRadius="15"
                                Background="LightGray">
                            <Border x:Name="SwitchShape"
                                    Width="22"
                                    Height="22"
                                    Margin="4,0,4,0"
                                    Background="White"
                                    HorizontalAlignment="Left"
                                    CornerRadius="15">
                                <Border.Effect>
                                    <DropShadowEffect Opacity=".2"/>
                                </Border.Effect>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchShape"
                                        Property="HorizontalAlignment"
                                        Value="Right"/>
                                <Setter TargetName="SwitchShape"
                                        Property="Background"
                                        Value="#4cd964"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SwitchShape"
                                        Property="HorizontalAlignment"
                                        Value="Left"/>
                                <Setter TargetName="SwitchShape"
                                        Property="Background"
                                        Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>

            <!-- Icon to reflect theme state -->
            <Image x:Name="ThemeIcon"
                Width="20"
                Height="20"
                Margin="5,0,0,0" />
        </StackPanel>


        <oxy:PlotView x:Name="CompanyDataChart"
              Margin="10,116,10,10"
              Grid.RowSpan="3"
              Grid.ColumnSpan="3"
              Background="{DynamicResource WindowBackgroundBrush}"
              />
    </Grid>
</Window>